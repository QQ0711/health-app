<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity"
    android:id="@+id/container_activity_first">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="基本資料"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/blue5"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@id/constraint">

            <Button
                android:id="@+id/btn_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="確認"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:backgroundTint="@color/blue4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioGroup3"/>

            <LinearLayout
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年齡："
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/ed_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:hint="請輸入年齡"
                    android:textSize="24dp"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="歲"
                    android:textColor="@color/black"
                    android:textSize="24dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/age"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身高："
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/ed_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:hint="請輸入身高"
                    android:textSize="24dp"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公分 (cm)"
                    android:textColor="@color/black"
                    android:textSize="24dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/height"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="體重："
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/ed_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:hint="請輸入體重"
                    android:textSize="24dp"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公斤 (kg)"
                    android:textColor="@color/black"
                    android:textSize="24dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生理性別："
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="@id/weight"
                app:layout_constraintTop_toBottomOf="@id/weight"/>
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/sex"
                app:layout_constraintTop_toBottomOf="@id/weight">

                <RadioButton
                    android:id="@+id/btn_boy"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="男生"
                    android:textSize="20dp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/btn_girl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="女生"
                    android:textSize="20dp"/>
            </RadioGroup>

            <TextView
                android:id="@+id/goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健身目標："
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="@id/weight"
                app:layout_constraintTop_toBottomOf="@id/sex"/>
            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@+id/goal"
                app:layout_constraintTop_toBottomOf="@id/goal">

                <RadioButton
                    android:id="@+id/btn_health"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="維持健康"
                    android:textSize="20dp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/btn_fat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="減脂"
                    android:textSize="20dp"/>

                <RadioButton
                    android:id="@+id/btn_muscle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="增肌"
                    android:textSize="20dp"/>
            </RadioGroup>
            <TextView
                android:id="@+id/habit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="運動習慣："
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="@id/weight"
                app:layout_constraintTop_toBottomOf="@id/radioGroup2"/>
            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@+id/habit"
                app:layout_constraintTop_toBottomOf="@id/habit">

                <RadioButton
                    android:id="@+id/sport_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="幾乎不運動"
                    android:textSize="20dp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/sport_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="每週運動1~3天"
                    android:textSize="20dp"/>

                <RadioButton
                    android:id="@+id/sport_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="每週運動3~5天"
                    android:textSize="20dp"/>
                <RadioButton
                    android:id="@+id/sport_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="每週運動6~7天"
                    android:textSize="20dp"/>
                <RadioButton
                    android:id="@+id/sport_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="長時間運動"
                    android:textSize="20dp"/>
            </RadioGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>